{
  "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100,
    "quoteStyle": "single",
    "trailingComma": "all"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "react/jsx-no-undef": "error",
      "react/jsx-no-duplicate-props": "error",
      "react/jsx-boolean-value": "error"
    }
  }
}

